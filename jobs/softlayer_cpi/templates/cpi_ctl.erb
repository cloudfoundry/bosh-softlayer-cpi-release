#!/bin/bash

set -e

LOG_DIR=/var/vcap/sys/log/softlayer_cpi
RUN_DIR=/var/vcap/sys/run/softlayer_cpi
PIDFILE=$RUN_DIR/cpi.pid

case $1 in

  start)
    mkdir -p $RUN_DIR
    chown -R vcap:vcap $RUN_DIR

    # Logs are generated by bin/cpi
    mkdir -p $LOG_DIR
    chown -R vcap:vcap $LOG_DIR

    echo $$ > $PIDFILE

    # Create a dummy process so monit will start it on system reboot
    tail -f /dev/null

    ;;

  stop)

    rm -f $PIDFILE

    ;;

  *)

  echo "Usage: cpi_ctl {start|stop}" ;;
esac
