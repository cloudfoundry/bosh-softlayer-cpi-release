#!/bin/bash

(
  set -e

  function printStatus {
      if [ $? -eq 0 ]; then
          echo -e "\nSWEET SUITE SUCCESS"
      else
          echo -e "\nSUITE FAILURE"
      fi
  }

  trap printStatus EXIT
  export GOPATH=$(godep path):$GOPATH

  bin=$(dirname $0)

  echo -e "\n Getting bosh-agent dependencies..."  
  $bin/go get github.com/cloundfoundry/bosh-agent/...

  echo -e "\n Cleaning build artifacts..."
  go clean

  echo -e "\n Formatting packages..."
  go fmt ./...

  echo -e "\n Unit Testing packages:"
  go test ./action/... ./api/... ./main/... ./softlayer/... ./util/...

  echo -e "\n Vetting packages for potential issues..."
  go tool vet action api main softlayer util
)